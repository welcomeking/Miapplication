<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="daedalusdigital.miapplication.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">


        <activity
            android:name=".ui.activities.DetailActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.PileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.PatternLockActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.SlideActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.AdvancedActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.WelcomeFragmentsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.DetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
        android:name=".ui.activities.GridActivity"
        android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activities.pinlock"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
